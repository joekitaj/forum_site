<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>WDI Forum</title>

  <!-- jQuery -->
  <script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>

  <!-- custom app -->
  <script src="/js/app.js" charset="utf-8"></script>

  <!-- css files -->
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/master.css">
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <header>
    <h1 class="main-title">COMMUNITY FORUM</h1>
  </header>
  <main>
    <a class="logout" href="/logout">Logout</a>
    <a class="new" href="/posts/new">+ New Post</a>
    <div class="posts">
      <div class="labels">
        <h4 class="discussion-title">DISCUSSIONS</h4>
        <h5 class="descriptor">LIKES</h5>
        <h5 class="descriptor">COMMENTS</h5>
        <h5 class="descriptor date">DATE</h5>
        <h5 class="descriptor author-title">Author</h5>
      </div>
      <% posts.forEach((post) => { %>
        <div class="row clickable" data-href="/posts/<%=post.id%>">
          <h4 class="post-title">
            <%= post.title %>
          </h4>
          <h5 class="info likes">
            <%= post.likes %>
          </h5>
          <h5 class="info comments">
            <%= post.comments %>
          </h5>
          <h5 class="info stamp">
            <%= post.stamp %>
          </h5>
          <h5 class="info author">
            <%= post.author %>
          </h5>
        </div>
      <% }) %>
    </div>
  </main>
  <footer>Copyright 2017 Joe Kitaj All Rights Reserved.</footer>
</body>
</html>
