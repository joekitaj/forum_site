<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>WDI Forum</title>
    <link rel="stylesheet" href="/normalize.css">
    <link rel="stylesheet" href="/master.css">
  </head>
  <body>
    <header>
      <h1 class="main-title">GA FORUM</h1>
    </header>
    <div class="line"></div>
    <main>
      <a class="new-button" href="/posts/new">+ New Post</a>
      <div class="posts">
        <table>
          <thead>
            <tr class="table-row">
              <th class="table-title">
                <h4>DISCUSSIONS</h4>
              </th>
              <th>
                LIKES
              </th>
              <th>
                COMMENTS
              </th>
              <th>
                DATE
              </th>
            </tr>
          </thead>
          <tbody>
            <% posts.forEach((post) => { %>
                <tr class="table-row clickable" data-hfref="/posts/<%=post.id%>">
                  <td class="post-title"><%= post.title %>  </a></td>
                  <td><%= post.likes %></td>
                  <td><%= post.comments %></td>
                  <td><%= post.stamp %></td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
    <footer>Copyright 2017 Joe Kitaj All Rights Reserved.</footer>
  </body>
</html>
